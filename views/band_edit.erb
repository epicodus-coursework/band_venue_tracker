<h1><%=@band.name() %></h1>

<form action="/bands/<%= @band.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="name">Edit <%=@band.name() %>'s name:</label>
  <input id="name" name="name" type="text">

  <button type="submit">Update</button>
</form>

<form action="/bands/<%= @band.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete Band</button>
</form>

<h3>Select all the venues where this band has played:</h3>

<% if @venues.any?() %>
  <form action="/band/<%= @band.id %>" method="post">
    <input type="hidden" name="_method" value="patch">

    <% @venues.each() do |venue| %>
      <div class="checkbox">
        <label>
          <input type="checkbox" name="venue_ids[]" value="<%= venue.id() %>"><%= venue.name() %>
        </label>
      </div>
    <% end %>

    <button type="submit">Add Venues</button>
  </form>
<% end %>

<h5><a href="/" >Return to main page</a></h5>
