<h1>Band Tracker</h1>

<h3>Current bands:</h3>

<% if @bands.any?() %>
  <p>Select a band to see which venues they've played:</p>

  <ul>
    <% @bands.each() do |band| %>
      <li><a href="/bands/<%= band.id() %>"><%= band.name() %></a></li>
    <% end %>
  </ul>
<% else %>
  <p>No bands yet!</p>
<% end %>

<p>Add a new band:</p>

<form action="/bands" method="post">
  <label for="name">Band Name</label>
  <input id="name" name="name" type="text">

  <button type="submit">Add Band</button>
</form>

<h3>Current venues:</h3>

<% if @venues.any?() %>
  <p>Select a venue to see which bands have played:</p>

  <ul>
    <% @venues.each() do |venue| %>
      <li><a href="/venues/<%= venue.id() %>"><%= venue.name() %></a></li>
    <% end %>
  </ul>
<% else %>
  <p>No venues yet!</p>
<% end %>

<p>Add a new venue:</p>

<form action="/venues" method="post">
  <label for="name">Venue Name</label>
  <input id="name" name="name" type="text">

  <button type="submit">Add Venue</button>
</form>
