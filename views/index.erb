<h1>Band Tracker</h1>

<div class="well well-sm">
  <h3>Current bands:</h3>

  <% if @bands.any?() %>
    <p>Select a band to see which venues they've played:</p>

    <ul class="list-unstyled">
      <% @bands.each() do |band| %>
        <li><a href="/bands/<%= band.id() %>"><%= band.name() %></a></li>
      <% end %>
    </ul>
  <% else %>
    <p>No bands yet!</p>
  <% end %>
</div>

<div class="well well-sm">
  <form class="form-inline" action="/bands" method="post">
    <div class="form-group">
      <label for="name">Add a new band:</label>
      <input class="form-control" id="name" name="name" type="text">
    </div>

    <button type="submit" class="btn btn-default">Add Band</button>
  </form>
</div>

<div class="well well-sm">
  <h3>Current venues:</h3>

  <% if @venues.any?() %>
    <p>Select a venue to see which bands have played:</p>

    <ul class="list-unstyled">
      <% @venues.each() do |venue| %>
        <li><a href="/venues/<%= venue.id() %>"><%= venue.name() %></a></li>
      <% end %>
    </ul>
  <% else %>
    <p>No venues yet!</p>
  <% end %>
</div>

<div class="well well-sm">
  <form class="form-inline" action="/venues" method="post">
    <div class="form-group">
      <label for="name">Add a new venue:</label>
      <input  class="form-control"id="name" name="name" type="text">
    </div>

    <button type="submit" class="btn btn-default">Add Venue</button>
  </form>
</div>
