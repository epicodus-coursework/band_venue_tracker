<h1><%= @band.name() %></h1>

<% if @band.venues().any?() %>
  <h3>Here are all the venues this band has played:</h3>

  <ul>
    <% @band.venues().each() do |venue| %>
      <li><%= venue.name() %></li>
    <% end %>
  </ul>
<% else %>
  <p>No venues yet!</p>
<% end %>

<h3>Update venues below:</h3>

<% if @venues.any?() %>
  <form action="/bands/<%= @band.id %>" method="post">
    <input type="hidden" name="_method" value="patch">

    <% @venues.each() do |venue| %>
      <div class="checkbox">
        <label>
          <input type="checkbox" name="venue_ids[]" value="<%= venue.id() %>"><%= venue.name() %>
        </label>
      </div>
    <% end %>

    <button type="submit">Update venues</button>
  </form>
<% end %>

<form action="/band_name/<%= @band.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="name">Update <%=@band.name() %>'s name:</label>
  <input id="name" name="name" type="text">

  <button type="submit">Update</button>
</form>

<form action="/bands/<%= @band.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete Band</button>
</form>

<p><a href="/">Return to Main Page</a></p>
