<h1><%= @band.name() %></h1>

<% if @band.venues().any?() %>
  <h3>Here are all the venues this band has played:</h3>

  <ul>
    <% @band.venues().each() do |venue| %>
      <li><%= venue.name() %></li>
    <% end %>
  </ul>
<% else %>
  <p>No venues yet!</p>
<% end %>

<h3>Add venues below:</h3>

<% if @venues.any?() %>
  <form action="/bands/<%= @band.id %>" method="post">
    <input type="hidden" name="_method" value="patch">

    <% @venues.each() do |venue| %>
      <div class="checkbox">
        <label>
          <input type="checkbox" name="venue_ids[]" value="<%= venue.id() %>"><%= venue.name() %>
        </label>
      </div>
    <% end %>

    <button type="submit">Add venues</button>
  </form>
<% end %>

<p><a href="/bands">Return to all bands</a></p>

<p><a href="/">Return to Main Page</a></p>
